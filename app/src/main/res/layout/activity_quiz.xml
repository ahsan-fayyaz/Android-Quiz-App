<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toast_container"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffaf49"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:orientation="vertical"

    tools:context=".QuizActivity">


    <RelativeLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="8dp">


        <TextView
            android:id="@+id/text_view_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textSize="15dp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_view_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_below="@id/text_view_score"
            android:text="Question: 1/x"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/quit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Quit"
            android:fontFamily="@font/roboto_medium"
            android:background="#ff4975"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/skipQuestion"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/quit"
            android:background="#4bd31e"
            android:text="Skip" />


    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.053dp"
        android:background="@android:color/darker_gray"
        android:outlineAmbientShadowColor="@android:color/black"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:text="Placeholder for Question"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView"
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp"
        app:srcCompat="@drawable/towerofpisa" />

    <Button
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="#4999ff"
        android:fontFamily="@font/roboto_medium"
        android:padding="8dp"
        android:text="Placeholder for Option 1"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_medium"
        android:background="#4999ff"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:text="Placeholder for Option 2" />

    <Button
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_medium"
        android:background="#4999ff"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:text="Placeholder for Option 3" />

    <Button
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_medium"
        android:background="#4999ff"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:text="Placeholder for Option 4" />
</LinearLayout>